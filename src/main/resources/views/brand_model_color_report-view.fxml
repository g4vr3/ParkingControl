<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="border-pane" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.parkingcontrol.controller.BrandModelColorReportController">
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </BorderPane.margin>
            <children>
                <ImageView fitHeight="15.0" fitWidth="15.0" opacity="0.65" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/language_icon.png" />
                    </image>
                </ImageView>
                <ComboBox fx:id="languageComboBox">
                    <tooltip>
                        <Tooltip text="%language_combobox_tooltip" />
                    </tooltip>
                </ComboBox>
            </children>
        </HBox>
    </top>
    <center>
        <VBox fx:id="vboxCenter" alignment="CENTER" maxHeight="300.0" maxWidth="400.0" spacing="15.0" styleClass="vbox-center" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="tfBrand" promptText="%brand_prompt" styleClass="text-field">
                    <tooltip>
                        <Tooltip text="%brand_tooltip" />
                    </tooltip>
                    <font>
                        <Font size="13.0" />
                    </font>
                </TextField>
                <TextField fx:id="tfModel" promptText="%model_prompt" styleClass="text-field">
                    <font>
                        <Font size="13.0" />
                    </font>
                    <tooltip>
                        <Tooltip text="%model_tooltip" />
                    </tooltip>
                </TextField>
                <TextField fx:id="tfColour" promptText="%colour_prompt" styleClass="text-field">
                    <tooltip>
                        <Tooltip text="%colour_tooltip" />
                    </tooltip>
                    <font>
                        <Font size="13.0" />
                    </font>
                </TextField>
            <HBox alignment="CENTER" spacing="20.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <children>
                      <Button fx:id="saveButton" alignment="CENTER" contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" styleClass="save-button" text="%save_button_text" textFill="WHITE" textOverrun="CLIP" wrapText="true">
                          <font>
                              <Font name="Arial" size="13.0" />
                          </font>
                          <tooltip>
                              <Tooltip text="%save_button_tooltip" />
                          </tooltip>
                      </Button>
                   <Button fx:id="closeButton" mnemonicParsing="false" styleClass="close-button" text="%close_button_text">
                       <tooltip>
                           <Tooltip text="%close_button_tooltip" />
                       </tooltip>
                   </Button>
               </children>
            </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
