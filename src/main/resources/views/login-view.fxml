<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.parkingcontrol.controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #d5d5d5; -fx-background-radius: 10;" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="tfUsername" prefWidth="230.0" promptText="%email_username_prompt" style="-fx-border-color: transparent; -fx-background-color: #ffffff;">
                    <font>
                        <Font size="13.0" />
                    </font>
                </TextField>
                <TextField fx:id="tfPass" layoutX="30.0" layoutY="25.0" prefWidth="230.0" promptText="%password_prompt" style="-fx-border-color: transparent; -fx-background-color: #ffffff;">
                    <font>
                        <Font size="13.0" />
                    </font>
                </TextField>
                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="loginButton" alignment="CENTER" contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-color: #EE5593CC;" text="%login_button_text" textFill="WHITE" textOverrun="CLIP" wrapText="true">
                            <font>
                                <Font name="Arial" size="13.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <top>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="15.0" right="15.0" top="15.0" />
            </BorderPane.margin>
            <children>
                <ComboBox fx:id="languageComboBox" prefWidth="150.0" />
                <ImageView fitHeight="67.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/adminLogo.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>
    </top>
</BorderPane>
